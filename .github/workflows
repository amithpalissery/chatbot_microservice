name: CI/CD Pipeline

on:
  push:
    branches:
      - main

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Set image tag
        id: set-tag
        run: echo "TAG=${{ github.run_number }}" >> $GITHUB_ENV

      - name: Build and push AI service image
        uses: docker/build-push-action@v5
        with:
          context: ./ai-service
          push: true
          tags: ${{ secrets.DOCKERHUB_USERNAME }}/ai-service:1.0.1-${{ env.TAG }}
          file: ./ai-service/Dockerfile

      - name: Build and push chat-history-service image
        uses: docker/build-push-action@v5
        with:
          context: ./chathistory-service
          push: true
          tags: ${{ secrets.DOCKERHUB_USERNAME }}/chathistory-service:1.0.1-${{ env.TAG }}
          file: ./chathistory-service/Dockerfile
          
      - name: Build and push frontend image
        uses: docker/build-push-action@v5
        with:
          context: ./frontend
          push: true
          tags: ${{ secrets.DOCKERHUB_USERNAME }}/frontend:1.0.1-${{ env.TAG }}
          file: ./frontend/Dockerfile

  deploy:
    runs-on: ubuntu-latest
    needs: build-and-push
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up kubectl and kubeconfig
        uses: azure/k8s-set-context@v4
        with:
          kubeconfig: ${{ secrets.KUBE_CONFIG }}

      - name: Install Helm
        uses: azure/setup-helm@v4

      - name: Deploy with Helm
        run: |
          helm upgrade --install chatbot ./chatbot-microservice-chart \
            --set frontend.image.tag=1.0.1-${{ env.TAG }} \
            --set aiService.image.tag=1.0.1-${{ env.TAG }} \
            --set chatHistoryService.image.tag=1.0.1-${{ env.TAG }}
